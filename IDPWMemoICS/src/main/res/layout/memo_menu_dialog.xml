<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="?android:attr/buttonBarStyle" >
  <Button android:id="@+id/memo_menu_dialog_open"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/memo_menu_dialog_open"
          style="?android:attr/buttonBarButtonStyle" />
  <Button android:id="@+id/memo_menu_dialog_export"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/memo_menu_dialog_export"
          style="?android:attr/buttonBarButtonStyle" />
  <Button android:id="@+id/memo_menu_dialog_change_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/memo_menu_dialog_change_password"
          style="?android:attr/buttonBarButtonStyle" />
  <Button android:id="@+id/memo_menu_dialog_delete"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/memo_menu_dialog_delete"
          style="?android:attr/buttonBarButtonStyle" />
</LinearLayout>
