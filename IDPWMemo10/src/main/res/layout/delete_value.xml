<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/delete_value_type_text"
      />
  <TextView
      android:id="@+id/delete_value_type"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text=""
      />
  <Space
      android:layout_width="match_parent"
      android:layout_height="12sp"
      />
  <TextView
      android:id="@+id/delete_value_value_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/delete_value_value_text"
      />
  <TextView
      android:id="@+id/delete_value_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text=""
      />
  <Space
      android:layout_width="match_parent"
      android:layout_height="12sp"
      />
  <Button
      android:id="@+id/delete_value_execute_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/ok_button_text"
      android:onClick="onClickOkButton"
      />
  <Space
      android:layout_width="match_parent"
      android:layout_height="12sp"
      />
  <Switch
      android:id="@+id/delete_value_execute_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/delete_value_execute_switch_text"
      android:showText="true"
      android:textOff="@string/delete_value_execute_switch_textoff"
      android:textOn="@string/delete_value_execute_switch_texton"
      />
</LinearLayout>

